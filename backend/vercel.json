{
  "version": 2,
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/swagger.json",
      "dest": "src/server.js",
      "methods": ["GET"],
      "headers": {
        "Cache-Control": "public, max-age=3600"
      }
    },
    {
      "src": "/api-docs",
      "dest": "src/server.js",
      "methods": ["GET"]
    },
    {
      "src": "/health",
      "dest": "src/server.js",
      "methods": ["GET"]
    },
    {
      "src": "/api/(.*)",
      "dest": "src/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "src/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
